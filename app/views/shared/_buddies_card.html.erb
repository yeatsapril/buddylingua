<div class="b-container"> 
  
  <div class="b-cards">
    <div class="b-card ml-0">

      <img src="https://source.unsplash.com/random/150x150" class="avatar-medium">
        <div class="b-card-content">
          
          <h2><%= user.name %>,&nbsp;&nbsp; <%= render "shared/flag", language: "#{@native_language}", flag_class: "flag-big"%></h2>
          <p><%= user.address %></p>
          <div class="b-card-action">
            <p class="mt-2"><i class="far fa-trash-alt"></i></p>
          </div>
        </div>

    </div>
  </div>

</div>