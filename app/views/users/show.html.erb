<div class="container-fluid">
    <div class="row">
        <%# left column %>

        <div class="col-3 d-flex mt-5 justify-content-center" style="height:800px; border-right: 4px solid rgba(191, 191, 191, 0.2);">
           <div style="position: relative;">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/sarahlafer", class: "avatar avatar-large", alt: "avatar" %>

            <%= link_to "", "#", class:"far fa-edit edit-icon" %>

            <p style="text-align: center;" class="mt-3">
                <strong><%= @user.name %></strong>,
                <%= @user.age %>
                <span><%= render "shared/flag", language: "english", flag_class: "flag-big"%></span>
                <p class="border-bottom pb-3">Speaks <%= @native_language.capitalize %> <br> Wants to learn <%= @target_language.capitalize %></p>
            </p>            
               <div style="background-color: white" class="d-flex justify-content-left">
                 <div>
                    <p> <%= @user.email %> </p>
                    <p> <%= @user.address %> </p>
                    </div> 
                </div>    
           </div>             
        </div>
      
        <%# right column %>

        <div class="col-8 mt-5 pr-5">
            <div style="position:relative;" class="mt-3">
                <h6 class="o-2">SELF INTRODUCTION</h6>
                <%= @user.description %>
                <%= link_to "", "#", class:"far fa-edit edit-icon" %>
            </div>

            <div class="my-5" style="position:relative;">
                <h6 class="o-2">TRAVELLED TO</h6>
                <%= link_to "", "#", class:"far fa-edit edit-icon" %>
                <ul class="grey-box">
                    <% @travels.each do |travel|%>
                        <li class="grey-box-list">
                            <%= travel %>
                        </li>                
                    <% end %>                 
                </ul>
            </div>

            <div style="position:relative;">
                <h6 class="o-2">SPEAKS</h6>                
                <%= link_to "", "#", class:"far fa-edit edit-icon" %>
                <span style="color:#1ED346; text-decoration: underline;"><%= @native_language.capitalize %></span> <%= render "shared/flag", language: "#{@native_language}", flag_class: "flag-small" %>              
           </div>

            <div class="my-5" style="position:relative;">
                <h6 class="o-2">INTERESTS</h6>
                <%= link_to "", "#", class:"far fa-edit edit-icon" %>
                <ul class="grey-box">
                    <% @interests.each do |interest|%>
                    <li class="grey-box-list">
                    <%= interest %>
                    </li>                
                 <% end %>                 
             </ul>
            </div>
         
            <div style="position:relative;">
                <h6 class="o-2">WANTS TO LEARN</h6>
                <span class="grey-box-list"><%= @target_language %> <%= render "shared/flag", language: "#{@target_language}", flag_class: "flag-small" %> </span>
                <%= link_to "", "#", class:"far fa-edit edit-icon" %>
           </div>
        </div>     
    </div>
</div>
