<div class="banner-home d-flex justify-content-center">

  <div class="container-banner">
    <div class="row">
      <div class="col-12 ">
        <div class="container" style="margin-right: 350px">
          <h1 class="mb-3" style="font-size: 80px; font-weight: 800;"><strong>BuddyLingua</strong></h1>
          <p class="mb-3" style="font-size: 40px; font-weight: 400;">Meet a buddy, learn a language.</p>
          <br>
          <% if @user %>
          <p><%= link_to "GET STARTED", user_path(@user), class: "button-purple-banner"%></p>
          <% else %>
          <p><%= link_to "GET STARTED", new_user_session_path, class: "button-purple-banner"%></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- cards with icons -->
<div style="background-color: #f9f9f9;">
  <div class="container p-3">
    <h2 class="text-center" style="font-weight: 600; font-size: 35px; color: #414040; margin-top: 65px; margin-bottom: 10x">The Ultimate Learning Experience</h2>

    <div class="row d-flex justify-content-center">
      <div class="col-4 col-lg-4">
        <div class="card p-5 d-flex align-items-center bg-transparent" style="min-height: 400px; border: none;">
            <div class="icon-learn"></div>
            <hr class="m-4 divider-purple">
          <p class="text-center" style="font-size: 25px;">Learn languages and explore other cultures</p>
        </div>
      </div>

      <div class="col-4 col-lg-4">
        <div class="card p-5 d-flex align-items-center bg-transparent" style="min-height: 400px; border: none;">
            <div class="icon-people"></div>
            <hr class="m-4 divider-purple">
          <p class="text-center" style="font-size: 25px;">Be part of the worldwide community</p>
        </div>
      </div>

      <div class="col-4 col-lg-4">
        <div class="card p-5 d-flex align-items-center bg-transparent" style="min-height: 400px; border: none;">
            <div class="icon-chat"></div>
            <hr class="m-4 divider-purple">
          <p class="text-center" style="font-size: 25px;">Chat with language partners and get new friends</p>
        </div>
      </div>
      
    </div>
  </div>
</div>


<!-- newsletter -->
